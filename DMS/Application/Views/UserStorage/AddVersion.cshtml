@using Model.Business.ViewModel
@using Model.Business.Session
@model FileVersionViewModel
@{
    ViewBag.Title = "Insert File Version";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="max-width: 500px;">
    <div class="col-sm-12">
        @using (Html.BeginForm("AddVersion", "UserStorage", FormMethod.Post, htmlAttributes: new { @class = "dms-form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken();
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.RelativeDirectory, htmlAttributes: new { value = Model.RelativeDirectory})
            @Html.HiddenFor(model => model.FileID, htmlAttributes: new { value = Model.FileID })
            @Html.HiddenFor(model => model.VerNo, htmlAttributes: new { value = Model.VerNo })
            @Html.HiddenFor(model => model.Name, htmlAttributes: new { value = Model.Name })

            <div class="col-sm-12">
                @Html.Label("File")
            </div>
            <div class="col-sm-12 dms-input-holder">
                <input type="file" name="file" />
            </div>
            <div class="col-sm-12 dms-input-holder align-right" style="margin-top: 20px;">
                <input type="submit" class="dms-button" style="width: 100%;" value="Send" />
            </div>
        }
    </div>
</div>