<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top dms-menu">
        <div class="container">
            @{
                Html.RenderPartial("~/Views/Partials/Menu.cshtml");
            }
        </div>
    </div>
    <div class="container body-content dms-container" style="min-height: 500px">
        @RenderBody()
    </div>
    <div class="container body-content dms-container">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DMS</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/script")
    @RenderSection("scripts", required: false)
</body>
</html>
